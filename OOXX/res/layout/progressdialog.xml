        android:layout_height="wrap_content"
        android:text="加载中，请稍等..."
        android:textSize="20sp"
        android:textColor="#ffaaaaaa" 
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>
