<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/chat_item_in_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/chat_item_in_avatar"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_margin="8dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chat_item_in_avatar"
            android:layout_marginRight="50dip"
            android:layout_toRightOf="@+id/chat_item_in_avatar"
            android:background="@drawable/chat_leftbubble_bg"
            android:orientation="vertical"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/chat_item_in_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff397cbf"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/chat_item_in_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:textColor="#80333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/chat_item_in_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="14sp" 
                android:layout_marginTop="4dip"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_item_out_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/chat_item_out_avatar"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_margin="8dip"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chat_item_out_avatar"
            android:layout_marginLeft="50dip"
            android:layout_toLeftOf="@+id/chat_item_out_avatar"
            android:background="@drawable/chat_rightbubble_bg"
            android:orientation="vertical"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/chat_item_out_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff397cbf"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/chat_item_out_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:textColor="#80333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/chat_item_out_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="14sp" 
                android:layout_marginTop="4dip"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>